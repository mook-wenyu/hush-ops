{
  "id": "demo-mixed",
  "version": "v1",
  "entry": "root",
  "schedule": {
    "enabled": false,
    "kind": "cron",
    "cron": "*/5 * * * *",
    "window": { "startISO": null, "endISO": null },
    "concurrency": "allow",
    "notes": "示例：每5分钟；默认禁用，仅用于演示调度字段结构"
  },
  "nodes": [
    {
      "id": "root",
      "type": "sequence",
      "children": ["n-local", "n-agent", "n-mcp"]
    },
    {
      "id": "n-local",
      "type": "local_task",
      "driver": "shell",
      "command": "echo",
      "args": ["hello from local task"]
    },
    {
      "id": "n-agent",
      "type": "agent_invocation",
      "agentName": "demand-analysis",
      "input": {
        "document": "项目背景：示例自动执行"
      }
    },
    {
      "id": "n-mcp",
      "type": "mcp_tool",
      "server": "default",
      "toolName": "system.info",
      "arguments": {},
      "requiresApproval": true,
      "riskLevel": "high"
    }
  ]
}
