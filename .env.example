# Hush Ops Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Node.js Environment
NODE_ENV=development

# Orchestrator Configuration
ORCHESTRATOR_PORT=3000
ORCHESTRATOR_HOST=127.0.0.1
ORCHESTRATOR_BASE_PATH=/api/v1
ORCHESTRATOR_DB_PATH=
ORCHESTRATOR_MAX_CONCURRENCY=10
ORCHESTRATOR_DEV=1
ORCHESTRATOR_FORCE=0

# 开发模式依赖检查优化
# 开发环境已优化启动速度，默认跳过npm audit和outdated检查
# 生产环境部署时，请取消下行注释以启用严格的依赖安全检查
# ORCHESTRATOR_CHECK_DEPS=1

# Hush Ops Home Directory (optional, defaults to .hush-ops in project root)
HUSH_OPS_HOME=

# OpenAI Configuration (for agents)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=
OPENAI_TRACING_EXPORT_API_KEY=

# Agent Configuration
AGENTS_ENABLED=0
CHATKIT_ENABLED=0
HUSH_AGENT_MODEL=gpt-4o-mini

# Logging
LOG_LEVEL=info

# Tool Stream Configuration
TOOL_STREAM_STORE_MAX_BYTES=52428800
TOOL_STREAM_STORE_COMPRESS=1
TOOL_STREAM_ARCHIVE_DAYS=30

# MCP Bridge
MCP_BRIDGE_MOCK=0

# Approvals
APPROVALS_USE_FILE_WATCH=true

# Event Bus
EVENT_BUS_MAX_BUFFER_BYTES=1048576

# Vite (for UI development)
VITE_CHATKIT_ENABLED=0
