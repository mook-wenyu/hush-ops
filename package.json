{
  "name": "hush-ops",
  "version": "1.0.0",
  "description": "需求分析专家智能体示例",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch examples/run-demand-analysis.ts",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint \"{src,examples}/**/*.ts\" --max-warnings=0",
    "format": "prettier --write \"{src,examples,docs}/**/*.{ts,md,json}\"",
    "test": "vitest run",
    "typecheck": "tsc --noEmit && tsc --noEmit -p tsconfig.ui.json",
    "agents:config": "tsx src/cli/index.ts agents:config",
    "approvals": "tsx src/cli/index.ts approvals",
    "cli": "tsx src/cli/index.ts",
    "ui:dev": "vite --config vite.config.ts",
    "ui:build": "vite build --config vite.config.ts",
    "ui:preview": "vite preview --config vite.config.ts",
    "ui:ga": "npm run typecheck && vitest run tests/ui/planTransforms.spec.ts tests/ui/PendingApprovals.spec.tsx"
  },
  "lint-staged": {
    "*.{ts,md,json}": [
      "prettier --write",
      "eslint --max-warnings=0"
    ]
  },
  "keywords": [
    "openai",
    "agents",
    "requirements",
    "analysis"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@fastify/websocket": "^8.3.0",
    "@langchain/core": "^0.3.78",
    "@langchain/langgraph": "^0.4.9",
    "@modelcontextprotocol/sdk": "^1.20.0",
    "@oclif/core": "^4.5.4",
    "@oclif/plugin-help": "^6.2.33",
    "@openai/agents": "^0.1.9",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@vitejs/plugin-react": "^5.0.4",
    "croner": "^9.1.0",
    "execa": "^9.6.0",
    "fastify": "^4.28.1",
    "got": "^14.5.0",
    "json-logic-js": "^2.0.5",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "reactflow": "^11.11.4",
    "vite": "^5.4.20",
    "ws": "^8.18.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@tailwindcss/postcss": "^4.1.14",
    "@tailwindcss/vite": "^4.1.14",
    "@types/json-logic-js": "^2.0.8",
    "@types/node": "^22.5.0",
    "@types/ws": "^8.5.9",
    "autoprefixer": "^10.4.21",
    "daisyui": "^5.2.1",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "jsdom": "^27.0.0",
    "lint-staged": "^15.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "tailwindcss": "^4.1.14",
    "tsx": "^4.15.7",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.1.0",
    "vitest": "^2.0.1"
  },
  "oclif": {
    "bin": "hush-ops",
    "commands": "./src/cli/commands"
  }
}
