{
  "name": "hush-ops",
  "version": "2.0.0",
  "description": "混合编排可视化调度平台",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">=20"
  },
  "packageManager": "npm@10",
  "scripts": {
    "prepare": "husky",
    "dev": "cross-env NODE_ENV=development ORCHESTRATOR_DEV=1 concurrently --kill-others-on-fail \"npm:service:start\" \"npm:ui:dev\"",
    "dev:force": "cross-env ORCHESTRATOR_FORCE=1 concurrently --kill-others-on-fail \"npm:service:start\" \"npm:ui:dev\"",
    "build": "tsc -p tsconfig.json",
    "build:all": "npm run build && npm run ui:build",
    "lint": "eslint \"{src,examples}/**/*.{ts,tsx}\" --max-warnings=0",
    "format": "prettier --write \"{src,examples,docs}/**/*.{ts,tsx,md,json}\"",
    "test": "vitest run",
    "typecheck": "tsc --noEmit && tsc --noEmit -p tsconfig.ui.json",
    "check": "npm run lint && npm run typecheck",
    "verify": "npm run check && npm run test && npm run ui:ga",
    "smoke": "npm run typecheck && npm run build && npm run ui:build && node scripts/smoke-http.mjs",
    "plans:validate": "tsx scripts/plans-validate.mjs",
    "agents:config": "tsx src/cli/index.ts agents:config",
    "approvals": "tsx src/cli/index.ts approvals",
    "cli": "tsx src/cli/index.ts",
    "ui:dev": "vite --config vite.config.ts",
    "ui:build": "vite build --config vite.config.ts",
    "ui:preview": "vite preview --config vite.config.ts",
    "ui:ga": "npm run typecheck && vitest run --config vitest.ui.config.ts",
    "ui:perf": "node scripts/ui-lighthouse.mjs",
    "service:start": "tsx src/service/orchestrator/start.ts",
    "service:dev": "cross-env NODE_ENV=development ORCHESTRATOR_DEV=1 tsx src/service/orchestrator/start.ts",
    "service:force": "cross-env ORCHESTRATOR_FORCE=1 tsx src/service/orchestrator/start.ts",
    "service:clean": "tsx scripts/service-clean.mjs",
    "service:prod": "node dist/src/service/orchestrator/start.js"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --max-warnings=0"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "openai",
    "agents",
    "requirements",
    "analysis",
    "orchestration",
    "scheduling",
    "workflow",
    "mcp",
    "langgraph",
    "fastify",
    "react"
  ],
  "author": "mook-wenyu",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mook-wenyu/hush-ops.git"
  },
  "bugs": {
    "url": "https://github.com/mook-wenyu/hush-ops/issues"
  },
  "homepage": "https://github.com/mook-wenyu/hush-ops#readme",
  "dependencies": {
    "@fastify/multipart": "^8.3.0",
    "@fastify/websocket": "^8.3.0",
    "@hookform/resolvers": "^3.9.0",
    "@langchain/core": "^0.3.78",
    "@langchain/langgraph": "^0.4.9",
    "@modelcontextprotocol/sdk": "^1.20.0",
    "@oclif/core": "^4.5.4",
    "@oclif/plugin-help": "^6.2.33",
    "@openai/agents": "^0.1.9",
    "@tabler/icons-react": "^3.35.0",
    "@tanstack/react-router": "^1.58.0",
    "@tanstack/react-virtual": "^3.13.12",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@vitejs/plugin-react": "^5.0.4",
    "chokidar": "^4.0.3",
    "croner": "^9.1.0",
    "elkjs": "^0.8.2",
    "execa": "^9.6.0",
    "fastify": "^4.28.1",
    "got": "^14.5.0",
    "json-logic-js": "^2.0.5",
    "p-limit": "^7.1.1",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.53.0",
    "react-resizable-panels": "^2.1.9",
    "reactflow": "^11.11.4",
    "vite": "^5.4.20",
    "ws": "^8.18.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.10.0",
    "cross-env": "^7.0.3",
    "@tailwindcss/postcss": "^4.1.14",
    "@tailwindcss/vite": "^4.1.14",
    "@types/chokidar": "^1.7.5",
    "@types/json-logic-js": "^2.0.8",
    "@types/node": "^22.5.0",
    "@types/ws": "^8.5.9",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "daisyui": "^5.2.1",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "jsdom": "^27.0.0",
    "lint-staged": "^15.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "tailwindcss": "^4.1.14",
    "tsx": "^4.15.7",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.1.0",
    "vitest": "^2.0.1"
  },
  "oclif": {
    "bin": "hush-ops",
    "commands": "./src/cli/commands"
  }
}
